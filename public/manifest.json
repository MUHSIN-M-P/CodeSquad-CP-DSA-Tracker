{
  "manifest_version": 3,
  "name": "CodeSquad Tracker",
  "description": "Track LeetCode & Codeforces contest rankings, manage your squad, and compete with friends across platforms",
  "version": "2.5",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://codeforces.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/contest/*/ranking/*",
        "https://codeforces.com/contest/*/standings*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
